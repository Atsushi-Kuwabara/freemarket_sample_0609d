					%section.items-box
						%a{:href => "#"}
						%figure.items-box__photo
							%image_tag
						.items-box__body
							%h3.items-box__body__name.font-2
								= item.name
							.items-box__body__num
								.items-box__body__num--price.font-5
									= number_to_currency item.price, :unit => "¥", :precision => 0
								%i.icon-like-border.font-2
								
