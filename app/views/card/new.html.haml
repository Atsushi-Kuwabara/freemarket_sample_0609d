.single-wrapper
  = render "devise/shared/header_one"
  .card
    .card__title
      支払い方法

    = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm", class: "card-form") do
      %label.card-form__label カード番号
      %span.card-form__require 必須
      = text_field_tag "number", "", class: "card-form__number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
      %br
      .card-form__row
        %label.card-form__label 有効期限
        %span.card-form__require 必須
      .card-form__row_item
        %select#exp_month{name: "exp_month", type: "text", class: "card-form__exp_month"}
          %option{value: ""} --
          %option{value: "1"}01
          %option{value: "2"}02
          %option{value: "3"}03
          %option{value: "4"}04
          %option{value: "5"}05
          %option{value: "6"}06
          %option{value: "7"}07
          %option{value: "8"}08
          %option{value: "9"}09
          %option{value: "10"}10
          %option{value: "11"}11
          %option{value: "12"}12
        %span 月/
        %select#exp_year{name: "exp_year", type: "text",class: "card-form__exp_year"}
          %option{value: ""} --
          %option{value: "2019"}19
          %option{value: "2020"}20
          %option{value: "2021"}21
          %option{value: "2022"}22
          %option{value: "2023"}23
          %option{value: "2024"}24
          %option{value: "2025"}25
          %option{value: "2026"}26
          %option{value: "2027"}27
          %option{value: "2028"}28
          %option{value: "2029"}29
        %span 年
      %br
      .card-form__row 
      %label.card-form__label セキュリティコード
      %span.card-form__require 必須
      = text_field_tag "cvc", "", class: "card-form__cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
      #card_token
      = submit_tag "次へ進む", id: "token_submit", class: "card-form__btn"

  = render "devise/shared/footer"
