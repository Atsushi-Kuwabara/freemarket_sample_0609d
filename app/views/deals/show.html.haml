.main-container
  .mypage__header
    = render 'partial/header'
    = render 'partial/bread-crumbs'
	
  %main.deal-container
    .deal-container__content
      %section.deal-chapter
        %h2.deal-chapter--head
          取引画面
        .deal-chapter--transact-attention
          %h3
            %i
            %span
              メルカリからのアテンション
          %p
            メルカリからのメッセージ
        %ul.deal-chapter--transact-guide.text-right
          %li
            = link_to '#' do
              %span 購買代金の受け取りについて
              %i.fas.fa-angle-right
    .deal-chapter--deal-message-container
    .deal-container__side-bar
      = render partial: 'deals/side-bar', locals: { deal: @deal }
  %aside.app-banner
    = render partial: 'items/bottom-banner'
  .mypage__footer
    = render 'partial/footer'